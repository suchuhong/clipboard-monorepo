{
  "name": "@such/react-clipboard-lite",
  "version": "0.1.0",
  "description": "Lightweight React components and hooks for clipboard operations",
  "keywords": [
    "react",
    "clipboard",
    "copy",
    "paste",
    "hooks",
    "components"
  ],
  "author": "suchuhong",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/suchuhong/clipboard-monorepo.git",
    "directory": "packages/react-clipboard-lite"
  },
  "homepage": "https://suchuhong.github.io/clipboard-monorepo/",
  "bugs": {
    "url": "https://github.com/suchuhong/clipboard-monorepo/issues"
  },
  "scripts": {
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build": "tsup src/index.tsx --dts --format esm,cjs --clean",
    "dev": "tsup src/index.tsx --dts --format esm,cjs --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm test"
  },
  "devDependencies": {
    "@storybook/react": "^8.1.0",
    "@storybook/react-vite": "^8.1.0",
    "@storybook/addon-essentials": "^8.1.0",
    "storybook": "^8.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "jsdom": "^24.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "private": false,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
